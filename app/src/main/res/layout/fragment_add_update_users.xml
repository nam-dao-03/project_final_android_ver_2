<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_teacher"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_header_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New User"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:padding="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="@color/black"
        android:paddingStart="16dp"
        android:textSize="18sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/et_email_user"
            android:layout_width="380dp"
            android:layout_height="40dp"
            android:background="@drawable/custom_input_add_new"
            android:hint="Email"
            android:paddingStart="8dp"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Role"
        android:textColor="@color/black"
        android:paddingStart="16dp"
        android:textSize="18sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginBottom="8dp">
        <Spinner
            android:id="@+id/spn_role_user"
            android:layout_width="380dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="@color/black"
        android:paddingStart="16dp"
        android:textSize="18sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_horizontal">
        <EditText
            android:id="@+id/et_name_user"
            android:layout_width="380dp"
            android:layout_height="40dp"
            android:paddingStart="8dp"
            android:hint="Name"
            android:textSize="18sp"
            android:background="@drawable/custom_input_add_new"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:textColor="@color/black"
        android:paddingStart="16dp"
        android:textSize="18sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_horizontal">
        <EditText
            android:id="@+id/et_phone_number_user"
            android:layout_width="380dp"
            android:layout_height="40dp"
            android:paddingStart="8dp"
            android:hint="Phone Number"
            android:textSize="18sp"
            android:inputType="number"
            android:background="@drawable/custom_input_add_new"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textColor="@color/black"
        android:paddingStart="16dp"
        android:textSize="18sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_horizontal">
        <EditText
            android:id="@+id/et_description_user"
            android:layout_width="380dp"
            android:layout_height="80dp"
            android:paddingTop="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:hint="Description"
            android:textSize="18sp"
            android:gravity="top|start"
            android:scrollbars="vertical"
            android:maxLines="3"
            android:background="@drawable/custom_input_add_new"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/btn_cancel_users"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_marginRight="20dp"
            android:textColor="@color/secondary_color"
            android:background="@drawable/custom_background_white_stroke_secondary_color_corners_5"/>
        <Button
            android:id="@+id/btn_create_users"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Create"
            android:textColor="@color/white"
            android:background="@drawable/custom_background_secondary_color_stroke_secondary_color_corners_5"/>

    </LinearLayout>

</LinearLayout>