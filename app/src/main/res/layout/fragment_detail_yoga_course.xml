<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.yoga_course.fragments.DetailYogaCourseFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/img_decoration_detail_course"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_yoga_class_01"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_name_detail_course"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="Course: JavaScript"
                    android:textSize="28dp"
                    android:textStyle="bold"
                    android:textColor="@color/secondary_color"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_type_of_class_detail_course"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Flow Yoga"
                    android:textSize="20dp"
                    android:textColor="@color/primary_color"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_day_of_the_week_detail_course"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start on: Thursday"
                    android:textSize="20dp"
                    android:textColor="@color/light_black"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_time_detail_of_course"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="20dp"
                    android:text="Time: 11:00"
                    android:textColor="@color/light_black"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_capacity_detail_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Capacity: 20 persons"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/light_black"/>
            <TextView
                android:id="@+id/tv_duration_detail_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:text="Duration: 60 minutes"
                android:textColor="@color/light_black"/>
            <TextView
                android:id="@+id/tv_price_per_class_detail_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:textColor="@color/light_black"
                android:text="Price: 60 $"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="28dp"
                android:text="Description"
                android:textColor="@color/secondary_color"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_description_detail_course"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/light_black"
                android:text=""/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp">
                <Button
                    android:id="@+id/btn_update_detail_course"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="Update"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/primary_color"
                    android:background="@drawable/custom_background_white_stroke_primary_color_corners_5"/>
                <Button
                    android:id="@+id/btn_delete_detail_course"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="Delete"
                    android:textColor="@color/white"
                    android:background="@drawable/custom_background_primary_color_stroke_primary_color_corners_5"/>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:textSize="28dp"
                android:text="Class instance"
                android:textColor="@color/secondary_color"
                android:textStyle="bold"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_class_instance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                />
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>